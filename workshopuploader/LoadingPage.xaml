<Window x:Class="workshopuploader.LoadingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:workshopuploader"
        mc:Ignorable="d"
        Title="SCP:CBR Workshop Uploader" 
        Height="auto" Width="auto"
        MinHeight="500" MinWidth="500"
        Icon="/workshopuploader;component/Icons/remastered.ico"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.IsIconVisible="True"
        Loaded="Window_Loaded">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Waiting for Steam Overlay to load to prevent UI issues..." HorizontalAlignment="Center"/>
        <Separator Visibility="Hidden"/>
        <ui:ProgressBar Margin="50,0,50,0" Name="progressBar"/>
    </StackPanel>
</Window>